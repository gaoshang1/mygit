<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/toptitle_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E8E8E8"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/toolbar_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/kinggrid_pdf_save_item"
                android:padding="8dp"
                android:text="@string/document_save"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/toolbar_btn_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/kinggrid_signature"
                android:padding="8dp"
                android:visibility="gone"
                android:text="@string/signature"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/toolbar_btn_full_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/kinggrid_signer_full"
                android:padding="8dp"
                android:text="@string/full_signature"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B5B5B5" />

    <FrameLayout
        android:id="@+id/book_frame"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

</LinearLayout>