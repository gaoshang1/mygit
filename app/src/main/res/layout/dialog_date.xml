<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_tanchuang"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="2017年8月23日"
            android:textColor="#333333"
            android:textSize="17sp"
            />
    </LinearLayout>

    <View
        style="@style/div"/>

    <LinearLayout
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="18dp">

        <com.northdoo.futian_ducha.utlis.NumberPickerView
            android:id="@+id/date1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="#dcdcdc"
            app:npv_RespondChangeInMainThread="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/nian"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#60b3f1"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="16sp"
            app:npv_WrapSelectorWheel="true"/>

        <com.northdoo.futian_ducha.utlis.NumberPickerView
            android:id="@+id/date2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="#dcdcdc"
            app:npv_RespondChangeInMainThread="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/yue"
            app:npv_TextColorHint="#60b3f1"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#60b3f1"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="16sp"
            app:npv_WrapSelectorWheel="true"/>

        <com.northdoo.futian_ducha.utlis.NumberPickerView
            android:id="@+id/date3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:npv_DividerColor="#dcdcdc"
            app:npv_RespondChangeInMainThread="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/ri"
            app:npv_TextColorHint="#60b3f1"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#60b3f1"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="16sp"
            app:npv_WrapSelectorWheel="true"/>

        <com.northdoo.futian_ducha.utlis.NumberPickerView
            android:id="@+id/date4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="picker_hour"
            android:visibility="gone"
            app:npv_DividerColor="#dcdcdc"
            app:npv_MarginStartOfHint="10dp"
            app:npv_RespondChangeInMainThread="false"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/hour_display"
            app:npv_TextColorHint="#60b3f1"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#60b3f1"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="16sp"
            app:npv_WrapSelectorWheel="true"/>

        <com.northdoo.futian_ducha.utlis.NumberPickerView
            android:id="@+id/date5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="picker_minute"
            android:visibility="gone"
            app:npv_DividerColor="#dcdcdc"
            app:npv_ItemPaddingHorizontal="5dp"
            app:npv_ItemPaddingVertical="5dp"
            app:npv_ShowCount="5"
            app:npv_TextArray="@array/minute_display"
            app:npv_TextColorNormal="#666666"
            app:npv_TextColorSelected="#60b3f1"
            app:npv_TextSizeNormal="14sp"
            app:npv_TextSizeSelected="16sp"
            app:npv_WrapSelectorWheel="true"/>

    </LinearLayout>

    <View
        style="@style/div"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quxiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="14sp"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada"/>

        <TextView
            android:id="@+id/queding"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#60b3f1"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
